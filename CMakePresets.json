{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Unix Makefiles"
    },
    {
      "name": "base-release",
      "inherits": "base",
      "cacheVariables": {
        "MODE": "release"
      }
    },
    {
      "name": "base-debug",
      "inherits": "base",
      "cacheVariables": {
        "MODE": "debug"
      }
    },
    {
      "name": "macos-arm64-release",
      "displayName": "macOS ARM64 (Release)",
      "description": "Build for macOS ARM64 in release mode",
      "inherits": "base-release",
      "binaryDir": "${sourceDir}/build/macos-arm64-release",
      "cacheVariables": {
        "BUILD_TARGET": "macos-arm64"
      }
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 (Debug)",
      "description": "Build for macOS ARM64 in debug mode",
      "inherits": "base-debug",
      "binaryDir": "${sourceDir}/build/macos-arm64-debug",
      "cacheVariables": {
        "BUILD_TARGET": "macos-arm64"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 (Release)",
      "description": "Build for Windows x64 in release mode",
      "inherits": "base-release",
      "binaryDir": "${sourceDir}/build/windows-x64-release",
      "cacheVariables": {
        "BUILD_TARGET": "windows-x64"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 (Debug)",
      "description": "Build for Windows x64 in debug mode",
      "inherits": "base-debug",
      "binaryDir": "${sourceDir}/build/windows-x64-debug",
      "cacheVariables": {
        "BUILD_TARGET": "windows-x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-arm64-release",
      "displayName": "macOS ARM64 (Release)",
      "configurePreset": "macos-arm64-release",
      "targets": ["Propulse"]
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 (Debug)",
      "configurePreset": "macos-arm64-debug",
      "targets": ["Propulse"]
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 (Release)",
      "configurePreset": "windows-x64-release",
      "targets": ["Propulse"]
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 (Debug)",
      "configurePreset": "windows-x64-debug",
      "targets": ["Propulse"]
    }
  ],
  "packagePresets": [
    {
      "name": "macos-arm64-release",
      "displayName": "Package macOS ARM64 (Release)",
      "configurePreset": "macos-arm64-release",
      "generators": ["ZIP"]
    },
    {
      "name": "windows-x64-release",
      "displayName": "Package Windows x64 (Release)",
      "configurePreset": "windows-x64-release",
      "generators": ["ZIP"]
    }
  ],
  "workflowPresets": [
    {
      "name": "macos-arm64-release",
      "displayName": "macOS ARM64 Release (Generate + Build + Package)",
      "description": "Configure, build, and package macOS ARM64 release",
      "steps": [
        {
          "type": "configure",
          "name": "macos-arm64-release"
        },
        {
          "type": "build",
          "name": "macos-arm64-release"
        },
        {
          "type": "package",
          "name": "macos-arm64-release"
        }
      ]
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 Debug (Generate + Build)",
      "description": "Configure and build macOS ARM64 debug",
      "steps": [
        {
          "type": "configure",
          "name": "macos-arm64-debug"
        },
        {
          "type": "build",
          "name": "macos-arm64-debug"
        }
      ]
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release (Generate + Build + Package)",
      "description": "Configure, build, and package Windows x64 release",
      "steps": [
        {
          "type": "configure",
          "name": "windows-x64-release"
        },
        {
          "type": "build",
          "name": "windows-x64-release"
        },
        {
          "type": "package",
          "name": "windows-x64-release"
        }
      ]
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug (Generate + Build)",
      "description": "Configure and build Windows x64 debug",
      "steps": [
        {
          "type": "configure",
          "name": "windows-x64-debug"
        },
        {
          "type": "build",
          "name": "windows-x64-debug"
        }
      ]
    }
  ],
  "testPresets": []
}
